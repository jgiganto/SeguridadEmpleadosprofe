@model List<SeguridadEmpleados.Models.EMP>

@{
    ViewBag.Title = "Index";
}

<h2>Zona de empleados</h2>  

<dl>
    @foreach (var emp in Model)
    {
        <dt><b>@emp.APELLIDO</b></dt>
        <dd>Oficio: @emp.OFICIO</dd>
        <dd>Salario: @emp.SALARIO</dd>
        if (HttpContext.Current.User.IsInRole("ANALISTA") == false)
        {
            <dd>
                @Html.ActionLink("Editar", "Editar", "Empleados"
               , new { empno = emp.EMP_NO }, null)
            </dd>
        }
    }
</dl>

